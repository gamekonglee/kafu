<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 返回 -->
            <Button
                android:id="@+id/topLeftBtn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_back_btn"
                android:text="返回"
                android:onClick="goBack"
                android:textSize="15sp"
                android:textColor="@color/white" />

            <!-- 标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="光源体验"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 第一排 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 客厅1 -->
                <LinearLayout
                    android:id="@+id/thumb_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/thumb_1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="客厅1"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- 客厅2 -->
                <LinearLayout
                    android:id="@+id/thumb_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/thumb_2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="客厅2"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 第二排 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 客厅3 -->
                <LinearLayout
                    android:id="@+id/thumb_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/thumb_3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="客厅3"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- 卧室1 -->
                <LinearLayout
                    android:id="@+id/thumb_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/thumb_4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="卧室1"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 第三排 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 卧室2 -->
                <LinearLayout
                    android:id="@+id/thumb_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/thumb_5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="卧室2"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- 医院房间 -->
                <LinearLayout
                    android:id="@+id/video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/yiyuan01"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="医院房间"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>